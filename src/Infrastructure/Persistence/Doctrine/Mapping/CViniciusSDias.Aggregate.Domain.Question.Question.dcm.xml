<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="CViniciusSDias\Aggregate\Domain\Question\Question" table="question" repository-class="CViniciusSDias\Aggregate\Infrastructure\Question\DoctrineQuestionRepository">
        <id name="id" column="id">
            <generator strategy="NONE" />
        </id>

        <field name="prompt" type="string" nullable="false" />

        <one-to-many field="answers" target-entity="CViniciusSDias\Aggregate\Domain\Answer\Answer" mapped-by="question" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>